<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f5f5f5;
  }

  .container {
    max-width: 960px;
    margin: 40px auto;
    padding: 20px;
    background-color: #ffffff;
    border: 1px solid #dddddd;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  h1 {
    margin-top: 0;
    font-weight: bold;
    color: #337ab7;
  }

  p {
    margin-bottom: 20px;
  }

  form {
    margin-top: 20px;
  }

  label {
    display: block;
    margin-bottom: 10px;
  }

  input[type="text"], input[type="number"] {
    padding: 10px;
    border: 1px solid #cccccc;
    border-radius: 5px;
    width: 100%;
  }

  button[type="submit"] {
    background-color: #337ab7;
    color: #ffffff;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  button[type="submit"]:hover {
    background-color: #23527c;
  }

  .error {
    color: red;
    font-size: 14px;
    margin-bottom: 10px;
  }
</style>

<div class="container">
  <h1><%= tender.title %></h1>
  <p><%= tender.description %></p>
  <p>Instytucja: <%= tender.institution %></p>

  <% if (tender.is_ongoing) { %>
    <form action="/offers" method="post">
      <input type="hidden" name="tender_id" value="<%= tender.id %>">
      <label for="name">Nazwa składającego ofertę:</label>
      <input type="text" id="name" name="name"><br>
      <label for="value">Wartość oferty:</label>
      <input type="number" id="value" name="value"><br>
      <button type="submit">Złóż ofertę</button>
    </form>
  <% } else { %>
    <p>Przetarg zakończony</p>
  <% } %>
</div>