<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f5f5f5;
  }

  .container {
    max-width: 600px;
    margin: 40px auto;
    padding: 20px;
    background-color: #ffffff;
    border: 1px solid #dddddd;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  h1 {
    margin-top: 0;
    font-weight: bold;
    color: #337ab7;
  }

  .form-group {
    margin-bottom: 20px;
  }

  label {
    display: block;
    margin-bottom: 10px;
    font-weight: bold;
    color: #666666;
  }

  input[type="text"], input[type="datetime-local"], textarea {
    width: 100%;
    padding: 10px;
    margin-bottom: 20px;
    border: 1px solid #cccccc;
  }

  input[type="number"] {
    width: 100%;
    padding: 10px;
    margin-bottom: 20px;
    border: 1px solid #cccccc;
  }

  button[type="submit"] {
    background-color: #337ab7;
    color: #ffffff;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  button[type="submit"]:hover {
    background-color: #23527c;
  }
</style>

<div class="container">
  <h1>DODAJ PRZETARG</h1>

  <form action="/add-tender" method="POST">
    <div class="form-group">
      <label for="title">Nazwa przedmiotu przetargu:</label>
      <input type="text" id="title" name="title" required>
    </div>

    <div class="form-group">
      <label for="description">Opis przedmiotu przetargu:</label>
      <textarea id="description" name="description"></textarea>
    </div>

    <div class="form-group">
      <label for="institution">Instytucja zamawiająca:</label>
      <input type="text" id="institution" name="institution">
    </div>

    <div class="form-group">
      <label for="start_time">Data rozpoczęcia:</label>
      <input type="datetime-local" id="start_time" name="start_time" required>
    </div>

    <div class="form-group">
      <label for="end_time">Data zakończenia:</label>
      <input type="datetime-local" id="end_time" name="end_time" required>
    </div>

    <div class="form-group">
      <label for="max_budget">Budżet maksymalny:</label>
      <input type="number" id="max_budget" name="max_budget" step="0.01" required>
    </div>

    <button type="submit">Dodaj przetarg</button>
  </form>
</div>