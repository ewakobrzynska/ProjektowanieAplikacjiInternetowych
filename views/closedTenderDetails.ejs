<style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
    }
  
    .container {
      max-width: 960px;
      margin: 40px auto;
      padding: 20px;
      background-color: #ffffff;
      border: 1px solid #dddddd;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
  
    h1 {
      margin-top: 0;
      font-weight: bold;
      color: #337ab7;
    }
  
    p {
      margin-bottom: 20px;
    }
  
    h2 {
      margin-top: 20px;
      font-weight: bold;
      color: #337ab7;
    }
  
    ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }
  
    li {
      padding: 10px;
      border-bottom: 1px solid #dddddd;
    }
  
    li:last-child {
      border-bottom: none;
    }
  
    .offer {
      font-weight: bold;
    }
  
    .offer-amount {
      font-weight: normal;
      color: #666;
    }
  </style>
  
  <div class="container">
    <h1><%= closedTender.title %></h1>
    <p><%= closedTender.description %></p>
    <p>Instytucja: <%= closedTender.institution %></p>
  
    <% if (message) { %>
  <p><%= message %></p>
<% } else { %>
  <h2>Złożone oferty:</h2>
  <ul>
    <% offers.forEach((offer) => { %>
      <li>
        <span class="offer"><%= offer.bidder_name %></span> - <span class="offer-amount"><%= offer.offer_amount %> zł</span>
      </li>
    <% }) %>
  </ul>
<% } %>
  </div>